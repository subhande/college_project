<div class="container">
	<div class="card">
		<h3 class="card-header">Welcome to Event Section</h3>
	</div>
</div>
<br>

<div class="container">
	<div class="card">
		<div class="card-header"><h4>Registerd Events</h4></div>
		<div class="card-body">
			<table class="table table-bordered">
				<thead>
				<tr>
					<th>Name</th>
					<th>Vanue</th>
					<th>Start Time</th>
					<th>Date</th>
					<th>Action</th>
				</tr>
				</thead>
				<tbody>
				{{#each events}}
					<tr>
						<th><a href="/event/participant/event/{{_id}}">{{name}}</a></th>
						<th>{{venue}}</th>
						<th>{{startTime}}</th>
						<th>{{formatDate date}}</th>
						<th><a class="btn btn-danger" href="/event/participant/withdraw/{{_id}}">Withdraw</a></th>
					</tr>
				{{/each}}
				</tbody>
			</table>
		</div>
	</div>
</div>
<br>
