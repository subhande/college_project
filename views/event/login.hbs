<div class="container">
	<div class="card card-login mx-auto mt-5">
		<div class="card-header">Login</div>
		<div class="card-body">
			<form action="/event/login" method="post">

				<div class="form-group">
					<label for="email">Email address</label>
					<input required name="email" class="form-control" id="email" type="email" aria-describedby="emailHelp" placeholder="Enter email">
				</div>

				<div class="form-group">
					<label for="exampleInputPassword1">Password</label>
					<input required name="password" class="form-control" id="password" type="password" placeholder="Enter Password">
				</div>

				<div class="form-group">
					<div class="form-check">
						<label class="form-check-label">
							<input class="form-check-input" type="checkbox"> Remember Password</label>
					</div>
				</div>

				<button class="btn btn-primary btn-block" type="submit">Login</button>

			</form>

			<div class="text-center">
				<a class="d-block small mt-3" href="/event/register">Register an Account</a>
				<a class="d-block small" href="/comingsoon">Forgot Password?</a>
				<a class="d-block small" href="/">Home Page?</a>
			</div>
		</div>
	</div>
</div>