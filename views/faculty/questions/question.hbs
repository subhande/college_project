<!-- Question Content -->
<div class="container">

	<div class="row">

		<!-- Question Content Column -->
		<div class="col-lg-8">

			<!-- Question -->
			<h1 class="mt-4">{{que.question}}</h1>

			<!-- Author -->
			<p class="lead">
				by
				<a href="">{{que.user.firstName}} {{que.user.lastName}}</a>
			</p>

			<hr>

			<!-- Date/Time -->
			<p>Posted on {{formatDate que.qdate}}</p>

			<hr>

			<!-- Preview Image -->
			{{!--<img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">--}}

			{{!--<hr>--}}

			<!-- Question Description -->
			<p class="lead">{{que.desc}}</p>

			<hr>

			<!-- Answer Form -->
			<div class="card my-4 border-danger">
				<h5 class="card-header">Answer:</h5>
				<div class="card-body">
					<form action="/faculty/questions/question/{{que._id}}" method="post" class="">
						<div class="form-group">
							<textarea name="answer" class="form-control" rows="3"></textarea>
						</div>
						<button type="submit" class="btn btn-primary">Submit</button>
					</form>
				</div>
			</div>

			<!-- Answer -->
			<h3>Answers</h3>
			<hr>
			{{#each que.answers}}
				<div class="card my-4 border-dark">
					<div class="card-header">
						<div class="card-body">
							<h5 class="mt-0">{{user.firstName}} {{user.lastName}}</h5>
							<div>Posted on {{formatDate adate}}</div>
							<div>Upvotes: {{upvotes}}</div>
							<div>{{#if isApproved}}Approved{{else}}Unapproved{{/if}}</div>
							<div>Answer: {{answer}}</div>
						</div>
						<a href="/faculty/questions/question/upvote/{{@root.que._id}}/{{_id}}" onclick="upvote(this,'{{_id}}')" id="upvote" class="btn btn-primary" >Upvote</a>
						<a href="/faculty/questions/question/{{#if isApproved}}unapprove{{else}}approve{{/if}}/{{@root.que._id}}/{{_id}}" onclick="approve(this,'{{_id}}')" id="approve" class="btn btn-primary">{{#if isApproved}}Unapprove{{else}}Approve{{/if}}</a>
					</div>

				</div>
				<hr>
			{{/each}}

